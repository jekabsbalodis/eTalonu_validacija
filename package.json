{
  "engines": {
    "npm": "10.x",
    "node": "23.x"
  },
  "devDependencies": {
    "@alpinejs/persist": "^3.14.3",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "alpinejs": "^3.14.3",
    "bulma": "^1.0.2",
    "chart.js": "^4.4.6",
    "chartjs-plugin-zoom": "^2.0.1",
    "esbuild": "^0.24.0",
    "sass": "^1.80.6"
  },
  "scripts": {
    "build-css": "sass --load-path=node_modules ./app/static/src/main.scss ./app/static/css/main-dev.css --watch",
    "build-js": "esbuild ./app/static/src/main.js --bundle --outfile=./app/static/js/bundle-dev.js --watch",
    "minify-css": "sass --load-path=node_modules ./app/static/src/main.scss ./app/static/css/main.css --style=compressed",
    "minify-js": "esbuild ./app/static/src/main.js --bundle --outfile=./app/static/js/bundle.js --minify"
  }
}